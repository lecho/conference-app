<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    style="@style/CardViewItemSelectable.Light"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/sponsor_color"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/text_type"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sponsor_color"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_name"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_type"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/sponsor_logo"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@id/text_name"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/text_web_page"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sponsor_logo"
            android:layout_marginTop="8dp"
            android:gravity="center"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>